{
  "name": "feasible",
  "version": "3.0.0-alpha.1",
  "description": "Guided and unified development environment",
  "main": "lib/index.js",
  "type": "module",
  "bin": {
    "feasible": "bin/cli.js"
  },
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brendtumi/feasible.git"
  },
  "author": "Tümay Çeber <tumayceber@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brendtumi/feasible/issues"
  },
  "homepage": "https://github.com/brendtumi/feasible#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "5.3.0",
    "commander": "12.0.0",
    "globby": "14.0.0",
    "js-yaml": "4.1.0",
    "json5": "2.2.3",
    "shelljs": "0.8.5",
    "update-notifier": "7.0.0"
  },
  "devDependencies": {
    "chai": "5.0.3",
    "eslint": "8.56.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.1.1",
    "mocha": "10.2.0"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true,
      "es2022": true,
      "mocha": true,
      "shelljs": true
    },
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        2,
        "always"
      ]
    }
  }
}
